# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================
# Local development with Docker PostgreSQL and mock S3
# This is the default environment for `npm start` and `npm run dev`
# ============================================================================

# Application Config
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
API_VERSION=v1
APP_NAME=Episode Metadata API
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:5173,http://127.0.0.1:3002,http://127.0.0.1:5173

# Database Config - Local Docker PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/episode_metadata?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_NAME=episode_metadata
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# AWS Config - Use AWS_PROFILE or dummy credentials for LocalStack
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCOUNT_ID=637423256673
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# S3 Buckets - Local/Development buckets
AWS_S3_BUCKET=episode-metadata-storage-dev
S3_PRIMARY_BUCKET=episode-metadata-storage-dev
S3_THUMBNAIL_BUCKET=episode-metadata-thumbnails-dev
S3_ENDPOINT=http://localhost:4566
MAX_FILE_UPLOAD_SIZE_MB=500

# Cognito Auth - Development Pool
COGNITO_USER_POOL_ID=us-east-1_mFVU52978
COGNITO_CLIENT_ID=lgtf3odnar8c456iehqfck1au
COGNITO_CLIENT_SECRET=mock-secret-dev
COGNITO_REGION=us-east-1

# JWT Tokens
JWT_SECRET=dev-secret-change-in-production-$(date +%s)
JWT_EXPIRATION=24h
REFRESH_TOKEN_SECRET=dev-refresh-secret-$(date +%s)
REFRESH_TOKEN_EXPIRATION=7d

# SQS Queue - Development
THUMBNAIL_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/637423256673/episode-metadata-thumbnail-queue-dev
SQS_REGION=us-east-1

# Redis - Optional (for rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# OpenSearch - Development
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_PROTOCOL=http
OPENSEARCH_NODE=http://localhost:9200

# Logging
LOG_LEVEL=debug
CLOUDWATCH_LOG_GROUP=/local/episode-metadata-api-dev
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true

# Feature Flags
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=false
ENABLE_CORS=true
ENABLE_HELMET=true
MOCK_S3=true
MOCK_COGNITO=false

# Email Configuration (Optional)
EMAIL_SERVICE=mock
SENDGRID_API_KEY=mock-key-dev

# Debug & Development
DEBUG_SQL=false
DEBUG_AUTH=false
INSPECT_PORT=9229
