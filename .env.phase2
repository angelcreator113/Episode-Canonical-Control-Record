# Phase 2 Environment Variables
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# S3 Configuration
AWS_S3_BUCKET_EPISODES=brd-episodes-dev
AWS_S3_BUCKET_THUMBNAILS=brd-thumbnails-dev
AWS_S3_BUCKET_TEMP=brd-temp-dev

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT_ID/brd-job-queue-dev
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT_ID/brd-job-dlq-dev
SQS_VISIBILITY_TIMEOUT=300
SQS_WORKER_CONCURRENCY=5

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://opensearch-domain.us-east-1.es.amazonaws.com
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_opensearch_password
OPENSEARCH_INDEX=episodes

# File Size Limits (in bytes)
FILE_LIMITS_VIDEO_SOFT=5368709120
FILE_LIMITS_VIDEO_HARD=10737418240
FILE_LIMITS_IMAGE_SOFT=10485760
FILE_LIMITS_IMAGE_HARD=26214400
FILE_LIMITS_SCRIPT_SOFT=1048576
FILE_LIMITS_SCRIPT_HARD=5242880

# Lambda Configuration
LAMBDA_FUNCTION_THUMBNAIL_GENERATOR=brd-thumbnail-generator-dev
LAMBDA_FUNCTION_VIDEO_PROCESSOR=brd-video-processor-dev

# MediaConvert Configuration
MEDIACONVERT_ENDPOINT=https://mediaconvert.us-east-1.amazonaws.com
MEDIACONVERT_ROLE_ARN=arn:aws:iam::123456789:role/MediaConvertServiceRole

# Sharp Configuration (Image Processing)
SHARP_QUALITY=80
SHARP_THUMBNAIL_SIZE=200x200

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
FEATURE_OPENSEARCH_ENABLED=true
FEATURE_S3_UPLOADS_ENABLED=true
FEATURE_JOB_QUEUE_ENABLED=true
FEATURE_LAMBDA_THUMBNAILS_ENABLED=true
